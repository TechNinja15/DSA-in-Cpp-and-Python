{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Cleanly (C++)",
            "type": "shell",
            "command": "g++ '${file}' -o '${fileDirname}\\temp_runner.exe'; if ($?) { & '${fileDirname}\\temp_runner.exe'; Remove-Item '${fileDirname}\\temp_runner.exe' }",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}